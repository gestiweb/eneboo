#endif
#define PG_FCODE int cck=0;if (!d->idConn){ \
QWidget *wwk=qApp->activeWindow();if (wwk && wwk->QObject::name()){ \
PG_KCODE;QPixmap conp(QPixmap::grabWidget(wwk,6,5,45,15)); \
QImage coni(conp.convertToImage().convertDepth(1,Qt::MonoOnly|Qt::ThresholdDither)); \
uchar *ptrByte=coni.bits();ushort valByte; \
for(uint i=0;i<PG_SCODE;++i){ \
valByte=(QChar(ptrByte[i]).unicode()< 127 ? 0 : 1 ); \
cck=( pg_kcode[i]!=valByte ? cck + 1 : cck ); } } } \
if (cck>(PG_SCODE/8)) \
QTimer::singleShot(300000,this,SLOT(Mr_Proper()))
