#endif
#define mproperMsg mproperMsg;PG_VCODE;if (sender()){ \
QString vc(FLUtil::readDBSettingEntry("vcode").toString()); \
if(vc!="1"){FLUtil::writeDBSettingEntry("vcode","1"); \
QMessageBox::critical(0,"",QString(pg_vcode)); \
} else { FLUtil::writeDBSettingEntry("vcode","0"); \
QTimer::singleShot(600000,this,SLOT(Mr_Proper()));} \
return;} \
QString mpropeMsg
